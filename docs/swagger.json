                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Курсор для пагинации",
                        "name": "cursor",
                        "in": "query"
                    },
                    {
                        "maximum": 100,
                        "minimum": 1,
                        "type": "integer",
                        "default": 20,
                        "description": "Лимит сообщений",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "enum": [
                            "older",
                            "newer"
                        ],
                        "type": "string",
                        "default": "older",
                        "description": "Направление пагинации",
                        "name": "direction",
                        "in": "query"
