        "/chat/{id}/messages": {
            "get": {
                "description": "Получить сообщения чата с cursor-based пагинацией",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "chat"
                ],
